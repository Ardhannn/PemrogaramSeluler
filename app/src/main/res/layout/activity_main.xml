<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rafi2"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/etBiodataMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biodata Mahasiswa"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="65dp"/>

    <TextView
        android:id="@+id/etNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:text="Nama   : Muhammad Rafi Ardhana"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/etNim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nim       : 19.01.4354"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:id="@+id/etKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prodi     : D3 Teknik Informatika "
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="60dp"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginLeft="27dp"
        android:text="Submit"
        android:layout_marginTop="120dp"
        android:backgroundTint="@color/purple"/>


</LinearLayout>
